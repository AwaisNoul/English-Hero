<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DD7A86" /> <!-- Transparent fill -->
            <corners android:radius="7dp" /> <!-- Border radius -->
        </shape>
    </item>

    <!-- Black border -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:color="#AF0000"
                android:width="3dp" />
            <size android:height="170dp"/>
        </shape>
    </item>
</layer-list>
